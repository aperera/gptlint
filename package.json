{
  "name": "gptlint",
  "description": "A linter with superpowers! Use LLMs to enforce best practices across your codebase in a standardized, configurable, scalable manner.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "gptlint/gptlint"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "source": "./bin/gptlint.ts",
  "types": "./dist/gptlint.d.ts",
  "bin": {
    "gptlint": "./dist/bin/gptlint.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "readme.md",
    "license",
    "docs",
    "media"
  ],
  "scripts": {
    "build": "tsup",
    "postbuild": "cp -f .gptlint/custom/*.md dist/.gptlint/custom",
    "build:docs": "tsx bin/cp-rules-to-docs.ts",
    "dev": "tsup --watch",
    "clean": "del dist",
    "prebuild": "run-s clean",
    "predev": "run-s clean",
    "pretest": "run-s build",
    "prepare": "husky",
    "precommit": "lint-staged",
    "test": "run-s test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\" \".gptlint/**/*.ts\"",
    "test:lint": "eslint . \".gptlint/**/*.ts\"",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@dexaai/dexter": "^1.2.11",
    "@sindresorhus/slugify": "^2.2.1",
    "array-uniq": "^3.0.0",
    "chalk": "^5.3.0",
    "cleye": "^1.3.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "execa": "^8.0.1",
    "exit-hook": "^4.0.0",
    "fast-json-stable-stringify": "^2.1.0",
    "file-type": "^19.0.0",
    "find-cache-dir": "^5.0.0",
    "get-tsconfig": "^4.7.3",
    "globby": "^14.0.1",
    "hash-object": "^5.0.1",
    "jsonrepair": "^3.6.1",
    "mdast-util-gfm": "^3.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "mdast-util-to-string": "^4.0.0",
    "multimatch": "^7.0.0",
    "p-map": "^7.0.2",
    "p-retry": "^6.2.0",
    "parse-gitignore": "^2.0.0",
    "path-exists": "^5.0.0",
    "pkg-dir": "^8.0.0",
    "plur": "^5.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "tasuku": "^2.0.1",
    "tiny-invariant": "^1.3.3",
    "type-fest": "^4.15.0",
    "unified": "^11.0.4",
    "unist-util-inspect": "^8.0.0",
    "unist-util-is": "^6.0.0",
    "which": "^4.0.0",
    "yaml": "^2.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fisch0920/eslint-config": "^1.3.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.7",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.12.7",
    "@types/parse-gitignore": "^1.0.2",
    "@types/which": "^3.0.3",
    "del-cli": "^5.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^1.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "keywords": [
    "lint",
    "linter",
    "linting",
    "ai",
    "gpt",
    "llms",
    "code quality",
    "code health",
    "best practices",
    "static analysis"
  ],
  "optionalDependencies": {
    "@getgrit/launcher": "^0.0.26"
  }
}
